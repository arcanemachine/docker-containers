#!/bin/bash
cd $(dirname "$0")
source ./preflight-check

# check output of grep to see if we need to create the container first
docker ps -a | grep -q $DOCKER_CONTAINER_NAME

if [ $? == 0 ]
then
  # container exists
  echo "$DOCKER_CONTAINER_NAME exists. Let's check to see if it's running or not..."

  # check if the container is running
  docker ps -a --filter "status=running" | grep -q $DOCKER_CONTAINER_NAME
  
  if [ $? == 1 ]
  then
    # container is not running. let's start it...
    echo "$DOCKER_CONTAINER_NAME is not running. Starting it..."
    docker start $DOCKER_CONTAINER_NAME
  else
    echo "$DOCKER_CONTAINER_NAME is already running."
  fi


else
  # container does not yet exist
  read -p "Container doesn't exist. Create a new container? (Y/n): " CREATE_NEW

  if [ "$CREATE_NEW" != "n" ]
  then
    ./create $DOCKER_CONTAINER_NAME $1
  else
    echo "goodbye"
    exit 0
  fi

fi

# open a terminal session
echo "Opening a terminal session..."
docker exec -it $DOCKER_CONTAINER_NAME bash

echo "goodbye"
